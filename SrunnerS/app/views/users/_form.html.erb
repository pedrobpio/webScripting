<div class="col-md-6 col-md-offset-3 list-group">
<a class = "list-group-item">
   <% if logged_in? %>
  <h1 class = "text-center">Edit Profile</h1>
  <% else %>
  <h1 class = "text-center">Sing up</h1>
  <% end %>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
      <%= f.password_field :password, class: "form-control" %>

      
  </div>

  <div class="field" >
      <%= f.label :password_confirmation, "Confirmation" %><br>
      <%= f.password_field :password_confirmation, class: "form-control" %></div>
  <!--<div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>-->
  </a>
  <% if logged_in? %>
    <%= f.submit "update" , class: "btn btn-primary form-control"%>
    <%= link_to 'Back', @user , class: "btn btn-primary form-control back-text" %>
  <% else %>
    <%= f.submit "sign up" , class: "btn btn-primary form-control"%>
    <%= link_to 'Back', login_path , class: "btn btn-primary form-control back-text" %>
    <%end%>
  </div>
<% end %>


</div>